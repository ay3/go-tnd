<p id="notice"><%= notice %></p>

<h1>Spots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Prefectures</th>
      <th>Postcode</th>
      <th>Address</th>
      <th>Mapcode</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Access</th>
      <th>Category</th>
      <th>Url</th>
      <th>Picture</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spots.each do |spot| %>
      <tr>
        <td><%= spot.name %></td>
        <td><%= spot.prefectures %></td>
        <td><%= spot.postcode %></td>
        <td><%= spot.address %></td>
        <td><%= spot.mapcode %></td>
        <td><%= spot.lat %></td>
        <td><%= spot.lng %></td>
        <td><%= spot.access %></td>
        <td><%= spot.category %></td>
        <td><%= spot.url %></td>
        <td><%= spot.picture %></td>
        <td><%= spot.memo %></td>
        <td><%= link_to 'Show', spot %></td>
        <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
        <td><%= link_to 'Destroy', spot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spot', new_spot_path %>
