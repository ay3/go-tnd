<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9">
    <%= image_tag(@spot.picture_url, width: 400) if @spot.picture.present? %>
  </div>

  <div class="col-md-9">
    <p><b>Name: </b><%= @spot.name %></p>
    <p><b>所在地: </b><%= @spot.prefectures %></p>
    <p><b>住所: </b><%= @spot.postcode %><br><%= @spot.address %></p>
    <p><b>Mapcode: </b><%= @spot.mapcode %></p>
    <p><b>緯度経度: </b><%= @spot.lat %> <%= @spot.lng %></p>
    <p><b>Access: </b><br><%= @spot.access %></p>
    <p><b>Category: </b><%= @spot.category %></p>
    <p><b>URL: </b><%= @spot.url %></p>
    <p><b>Memo: </b><%= @spot.memo %></p>

    <p>
      <%= link_to 'Edit', edit_spot_path(@spot) %> |
      <%= link_to 'Destroy', @spot, data: { confirm: '削除してもいいですか?' }, method: :delete %> |
      <%= link_to 'Back', spots_path %>
    </p>
  </div>

</div>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <p>
      <%= comment.body %> </b><%= comment.user_name %></b>
      <%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: '削除してもいいですか？' } %>
    </p>
  </div>
<% end %>
<%= render 'comments/form', comment: @comment %>

