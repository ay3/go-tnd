<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9">
    <%= image_tag(@spot.picture_url, width: 400) if @spot.picture.present? %>
  </div>

  <div class="col-md-9">
    <h3><%= @spot.name %></h3>
  </div>

  <div class="col-md-9">
    <ul>
    <li><b>住所:    </b><%= @spot.address %></li>
    <li><b>Mapcode: </b><%= @spot.mapcode %></li>
    <li><b>Access:  </b><%= markdown @spot.access %></li><br>
    <li><b>Memo:    </b><%= markdown @spot.memo %></li>
    <li><b>カテゴリー: </b><%= @tanada_level.name %></li>
    <li><b>参考サイト: </b><%= link_to @spot.url %></li>
    <li><b>緯度経度:   </b><%= @spot.latitude %>, <%= @spot.longitude %></li>
    </ul>
  </div>

  <div class="col-md-9">
    <p>
      <%= link_to 'Edit', edit_spot_path(@spot) %> |
      <%= link_to 'Destroy', @spot, data: { confirm: '削除してもいいですか?' }, method: :delete %> |
      <%= link_to 'Back', spots_path %>
    </p>
  </div>
  </div>

</div>

